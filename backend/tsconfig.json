{
  "compilerOptions": {
    "module": "NodeNext",                  // Use ESNext modules (for compatibility with ES imports/exports)
    "moduleResolution": "nodenext",          // Ensure Node-style module resolution
    "target": "ES2020",                  // Target modern JavaScript
    "strict": true,                      // Enable strict type-checking
    "esModuleInterop": true,             // Allow default imports from modules without default exports
    "skipLibCheck": true,                // Skip type checking of declaration files (faster compilation)
    "resolveJsonModule": true,           // Allow importing JSON files
    "outDir": "dist"                     // Output directory for compiled files
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "controllers/**/*.ts",
    "db/**/*.ts",
    "db/db.ts"
  ]
}
